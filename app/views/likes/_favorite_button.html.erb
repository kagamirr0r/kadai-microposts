  <% if current_user.favorite?(like) %>
    <%= form_for(current_user.likes.find_by(micropost_id: like.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, like.id %>
      <%= f.submit 'Cancel_Like', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.likes.build) do |f| %>
      <%= hidden_field_tag :micropost_id, like.id %>
      <%= f.submit 'Like', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>